<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="16dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_forecast"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_forecast"
        android:textColor="@color/colorPrimaryTextDark"
        android:paddingBottom="4dp"
        android:textSize="18sp"
        android:maxLines="1"
        android:text="Day"/>

    <TextView
        android:id="@+id/txt_forecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorSecondaryTextDark"
        android:textSize="14sp"
        android:maxLines="1"
        android:text="Forecast"
        android:layout_toRightOf="@id/img_forecast"
        android:layout_below="@id/txt_day"
        />

    <TextView
        android:id="@+id/txt_tempHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/colorPrimaryTextDark"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_alignParentEnd="true"
        android:text="18Â°"/>


</RelativeLayout>